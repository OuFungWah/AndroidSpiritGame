<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextArgInRL">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextRiceYellow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="RiceYellowTextNormal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextRiceYellow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SkyBlueTextNormal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextSkyBlue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeBottomBtn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="FragmentBgStyle">
        <item name="android:paddingTop">94dp</item>
        <item name="android:paddingBottom">100dp</item>
    </style>

    <style name="ShopPurpleBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/btn_purple</item>
    </style>

    <style name="ShopBtnRlParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
